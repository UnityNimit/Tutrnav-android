<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- STATE 1: LIST OF TUITIONS -->
    <LinearLayout
        android:id="@+id/layoutList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="My Classes"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!--
           NOTE: In your Adapter, inflate the 'item_tuition_card.xml'
           provided below to get the half-height look.
        -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyTuitions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_tuition_card"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabAddNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:text="Add Class"
            android:textColor="#2E2345"
            app:backgroundTint="#FFCA28"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="#2E2345" />
    </LinearLayout>

    <!-- STATE 2: EDIT/CREATE FORM -->
    <ScrollView
        android:id="@+id/layoutForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingBottom="100dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/btnBackToRecycler"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tvFormTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Create Class"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- IMAGE UPLOAD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardBackgroundColor="#2E2345"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_gradient_overlay" />

                <LinearLayout
                    android:id="@+id/btnUploadImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Title"
                android:textColor="#B0B0B0" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input_field"
                android:paddingHorizontal="15dp"
                android:textColor="#FFF" />

            <!-- TIMINGS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Timings"
                android:textColor="#B0B0B0" />

            <EditText
                android:id="@+id/etTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input_field"
                android:hint="e.g. 04:00 PM - 06:00 PM"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:textColor="#FFF"
                android:textColorHint="#999" />

            <!-- ROW: FEE & MAX STUDENTS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Fee (â‚¹)"
                        android:textColor="#B0B0B0" />

                    <EditText
                        android:id="@+id/etFee"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="15dp"
                        android:textColor="#FFF" />
                </LinearLayout>

                <View android:layout_width="15dp" android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Students"
                        android:textColor="#B0B0B0" />

                    <EditText
                        android:id="@+id/etMaxStudents"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:inputType="number"
                        android:paddingHorizontal="15dp"
                        android:textColor="#FFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- TAGS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Tags (Press Enter to add)"
                android:textColor="#B0B0B0" />

            <EditText
                android:id="@+id/etTagInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input_field"
                android:hint="e.g. Physics"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:textColor="#FFF"
                android:textColorHint="#999" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <!-- LOCATION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Location Coordinates"
                android:textColor="#B0B0B0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etLat"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_field"
                    android:focusable="false"
                    android:hint="Lat"
                    android:paddingHorizontal="15dp"
                    android:textColor="#FFF"
                    android:textColorHint="#999" />

                <View android:layout_width="10dp" android:layout_height="1dp" />

                <EditText
                    android:id="@+id/etLng"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_field"
                    android:focusable="false"
                    android:hint="Lng"
                    android:paddingHorizontal="15dp"
                    android:textColor="#FFF"
                    android:textColorHint="#999" />

                <ImageView
                    android:id="@+id/btnPickLocation"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="#FFCA28" />
            </LinearLayout>

            <!-- DESCRIPTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Description"
                android:textColor="#B0B0B0" />

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input_field"
                android:gravity="top"
                android:padding="15dp"
                android:textColor="#FFF" />

            <!-- CONSENT TOGGLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#15000000"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/cbConsent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="#FFCA28"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:text="All the details mentioned in the Tuition Details tab will be displayed publically. By ticking this, you acknowledge and permit the display of details."
                    android:textColor="#D0D0D0"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- ACTION BUTTONS (DELETE & SAVE SIDE-BY-SIDE) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- DELETE BUTTON (Left) -->
                <!-- Set visibility via code depending on Create vs Edit state -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2E2345"
                    android:text="Delete"
                    android:textColor="#FF6B6B"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:cornerRadius="15dp"
                    app:strokeColor="#FF6B6B"
                    app:strokeWidth="1dp" />

                <!-- SAVE BUTTON (Right) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFCA28"
                    android:text="Save Class"
                    android:textColor="#2F2B4B"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="15dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
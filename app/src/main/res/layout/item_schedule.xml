<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="#2D2B45"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- COLOR BAR (Subject Indicator) -->
        <View
            android:id="@+id/viewColorBar"
            android:layout_width="12dp"
            android:layout_height="0dp"
            android:background="#FFCA28"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ================= TOP SECTION: TIME & STATUS ================= -->

        <TextView
            android:id="@+id/tvTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="04:30 PM"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/viewColorBar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="(90 mins)"
            android:textColor="#9FA8DA"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTimeStart"
            app:layout_constraintStart_toEndOf="@+id/tvTimeStart"
            app:layout_constraintTop_toTopOf="@+id/tvTimeStart" />

        <!-- Status Chip (e.g. Live, Upcoming) -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_status_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="UPCOMING"
            android:textColor="#FFCA28"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/tvTimeStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTimeStart" />

        <!-- ================= MIDDLE SECTION: SUBJECT ================= -->

        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Advanced Physics"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvTimeStart"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeStart" />

        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="Ch 4: Quantum Mechanics n String Theory"
            android:textColor="#B39DDB"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvSubjectName"
            app:layout_constraintTop_toBottomOf="@+id/tvSubjectName" />

        <!-- Divider Line -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#1AFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvSubjectName"
            app:layout_constraintTop_toBottomOf="@+id/tvTopic" />

        <!-- ================= BOTTOM SECTION: TEACHER & LOCATION ================= -->

        <!-- Teacher Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgTutor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="#FFCA28"
            app:strokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/tvTutorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Dr. Strange"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgTutor"
            app:layout_constraintTop_toTopOf="@+id/imgTutor" />

        <!-- Location / Room -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/tvTutorName"
            app:layout_constraintBottom_toBottomOf="@+id/imgTutor">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#9FA8DA" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Room 304"
                android:textColor="#9FA8DA"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:text="Map"
            android:textSize="11sp"
            android:textColor="#2D2B45"
            android:backgroundTint="#FFCA28"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconTint="#2D2B45"
            app:iconSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgTutor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgTutor" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>